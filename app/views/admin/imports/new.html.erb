<!-- Page Content -->
<div id="page-content">
  <!-- Breadcrumb -->
  <div class="container">
    <ol class="breadcrumb">
      <li><%= link_to "Home", root_path %></li>
      <li class="active">Import CSV</li>
    </ol>
    </div>
    <!-- end Breadcrumb -->
    <div class="container">
      <header><h1>Import a CSV file</h1></header>
      <div class="row">
        <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
          <%= form_tag admin_imports_path, multipart: true do %>
            <div class="input-group">
              <label class="input-group-btn">
              <span class="btn btn-default" id="fileButton">
                <%= file_field_tag :file, style: "display: none;", id: "file" %>
                Choose a file
              </span>
            </label>
              <input id="fileName" type="text" class="form-control" readonly>
            </div>
            <div class="actions form-group clearfix">
              <br>
              <%= submit_tag "Submit", class: "btn btn-default btn-block" %>
            </div>
          <% end %>
          <hr>
       </div>
     </div><!-- /.row -->
  </div><!-- /.container -->
</div><!-- end Page Content -->
