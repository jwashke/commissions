<div id="info">
<p><%= "MLS Number: " + @listing.mls_number.to_s %><br/></p>
<p><%= "Description: " + @listing.public_remarks.to_s %><br/></p>
</div>

<%= image_tag "https://maps.googleapis.com/maps/api/streetview?size=600x300&location=#{@listing.latitude},#{@listing.longitude}&key=#{ENV['STREET_VIEW_KEY']}" %>

<div id="map"></div>
    <script>
      var map;
      function initMap() {
        map = new google.maps.StreetViewPanorama(document.getElementById('map'), {
          position: {lat: <%= @listing.latitude %>, lng: <%= @listing.longitude %>},
          pitch: 20
        });
      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8_5PQjZxAuVYV9OEQPz9d2HLCZfKaso0&callback=initMap"
    async defer></script>
